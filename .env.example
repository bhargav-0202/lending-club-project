# Example configuration file for Lending Club Project
# Copy this to .env and adjust values as needed

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Spark Configuration
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
SPARK_SHUFFLE_PARTITIONS=200

# Data paths (relative to project root)
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
OUTPUT_PATH=data/processed/loan_scores

# Hive database (if using Hive)
HIVE_DATABASE=itv022692_lending_club

# Spark SQL specific configs
SPARK_SQL_WAREHOUSE_DIR=/user/warehouse
SPARK_SQL_SHUFFLE_USE_OLD_FETCH_PROTOCOL=true

# Feature engineering weights
WEIGHT_PAYMENT_HISTORY=0.20
WEIGHT_DEFAULTERS_HISTORY=0.45
WEIGHT_FINANCIAL_HEALTH=0.35

# Grade thresholds
GRADE_A_THRESHOLD=2500
GRADE_B_THRESHOLD=2000
GRADE_C_THRESHOLD=1500
GRADE_D_THRESHOLD=1000
GRADE_E_THRESHOLD=750
GRADE_F_THRESHOLD=0

# Data quality settings
MIN_ROWS_THRESHOLD=1
BAD_RECORD_THRESHOLD=1

# Output format ('parquet' or 'csv')
OUTPUT_FORMAT=parquet
OUTPUT_MODE=overwrite
OUTPUT_PARTITIONS=4

# Logging
LOG_FILE=logs/lending_club.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
